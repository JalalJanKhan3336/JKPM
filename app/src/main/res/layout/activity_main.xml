<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/camera_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMERA PERMISSION"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/check_permissions_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK ALL PERMISSIONS"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/all_permissions_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST MULTIPLE PERMISSIONS"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>